@page
@model Lab5.Pages.Options.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Послуги</h1>

<p>
    <a asp-action="Create">Створити нову</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Option[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Option[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Option[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Option)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Редагувати</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Детальніше</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
